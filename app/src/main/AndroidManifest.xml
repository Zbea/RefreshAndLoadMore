<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leohan.refresh">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GridViewActivity"/>

        <activity android:name=".StaggeredActivity"/>

        <activity android:name=".EasyRecyclerViewActivity"/>


        <activity
            android:name=".loadmore.RefreshAndMoreActivity"
            android:label="@string/refresh_and_more">
        </activity>
        <activity
            android:name=".multistyle.MultiStyleActivity"
            android:label="@string/multi_style">
        </activity>
        <activity android:name=".header.HeaderFooterActivity"
                  android:label="@string/header_and_footer">
        </activity>
        <activity android:name=".collapsing.CollapsingActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:label="@string/collapsing"/>
        <activity android:name=".staggeredgrid.StaggeredGridActivity"
                  android:label="@string/staggered_grid"/>

    </application>

</manifest>